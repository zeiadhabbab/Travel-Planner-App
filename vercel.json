{
    "version": 2,
    "builds": [
      {
        "src": "src/server/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["package.json"]
        }
      },
      {
        "src": "src/client/index.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "includeFiles": ["package.json"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/src/server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/$1"
      }
    ]
  }